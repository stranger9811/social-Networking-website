<h1>New user</h1>

<%= form_for @user, :url => users_path, :html => { :multipart => true } do |form| %>
	<p>
	<%= form.label :fname %><br />
	<%= form.text_field :fname %>
	</p>
	<p>
	<%= form.label :lname %><br />
	<%= form.text_field :lname %>
	</p>
	<p>
	<%= form.label :email %><br />
	<%= form.text_field :email %>
	</p>
	<p>
	<%= form.label :password %><br />
	<%= form.text_field :password %>
	</p>
  <%= form.file_field :profile_pic %>
   <%= form.submit 'Create' %>
<% end %>
