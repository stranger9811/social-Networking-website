
<div class="container">
  <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <div class="well well-sm">
        <%= form_for(@group) do |form| %>
          <fieldset>
          
          <div class="form-group">
               <label class="col-md-3 control-label" for="email">Group Name</label>
                <div class="col-md-9">
              <%= form.text_field :name,:class=>"form-control" %>
             </div>
            </div>
          
          <div class="form-group">
                <label class="col-md-3 control-label" for="message">Description</label>
                 <div class="col-md-9">
                <%= form.text_area :description ,:class=>"form-control",:rows=>"5"%>
            </div>
            </div>
          
          <div class="form-group">
                  <label class="col-md-3 control-label" for="Gender">Privacy</label>
                  <div class="col-md-9">
                      <select id="group[privacy]" name="group[privacy]"  class="form-control">
                            <option value="private"  >Private</option>
                                                  <option value="public" >Public</option>
                                                  
                                                </select>
                                              </div>
                                            </div> 
          
          <div class="form-group">
                <label class="col-md-3 control-label" for="message">Pic</label>
                 <div class="col-md-9">
          <%= form.file_field :timeline_pic %>
          </div>
            </div>

            <div class="form-group">
              <div class="col-md-12 text-right">
           <%= form.submit 'Create',:class=>"btn btn-default btn-info btn-lg btn-block" %>
           </div>
            </div>

          </fieldset>
        <% end %>
    </div>
  </div>
  </div>
</div>


